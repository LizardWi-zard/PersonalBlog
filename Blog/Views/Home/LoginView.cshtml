@model Blog.Models.LoginViewModel
@{
    ViewBag.Title = "Вход";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Вход</title>
    <link type="text/css" rel="stylesheet" href="../../Content/LoginCSS.css" />
</head>

<body>
    <div class="toolbar">
        <div class="toolbarItem">
            <a href="#">Главная</a>
            <a href="#">Блог</a>
            <a href="#">Контакты</a>
        </div>
    </div>

    <main>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                @Html.ValidationSummary()
                

                <div class="hello_text">
                    <h3> Добро пожаловать! </h3>
                    <h2> Пожалуйста, авторизуйтесь </h2>
                </div>

                <div class="userInput">
                    @Html.EditorFor(u => u.Email)
                    @Html.EditorFor(u => u.Password)
                </div>

                <div class="linkButtons">

                    <a href="~/Home/Index"> На главную </a>
                    <button type="submit">Войти</button>
                </div>
            </div>
        }
    </main>
</body>
</html>
